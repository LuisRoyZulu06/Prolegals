<script src="<%= Routes.static_path(@conn, "/js/jquery-1.11.2.min.js") %>"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

<script>
$(document).ready(function(){

    $('#editFire').on('show.bs.modal', function (event){
        console.log("edit");

        var button = $(event.relatedTarget)
        var id = button.data('id')
        var brand = button.data('brand')
        var bullet_id = button.data('bullet_id')
        var date_purchased = button.data('date_purchased')
        var firearm_image = button.data('firearm_image')
        var make_year = button.data('make_year')
        var model = button.data('model')
        var name = button.data('name')
        var person_assigned = button.data('person_assigned')
        var purchase_price = button.data('purchase_price')
        var purchased_from = button.data('purchased_from')
        var rounds = button.data('rounds')
        var serial_number = button.data('serial_number')
        var status = button.data('status')
        var type = button.data('type')
      
        var modal = $(this)
        
        modal.find('.modal-body #id').val(id);
        modal.find('.modal-body #brand').val(brand);
        modal.find('.modal-body #bullet_id').val(bullet_id);
        modal.find('.modal-body #date_purchased').val(date_purchased);
        modal.find('.modal-body #firearm_image').val(firearm_image);
        modal.find('.modal-body #make_year').val(make_year);
        modal.find('.modal-body #model').val(model);
        modal.find('.modal-body #name').val(name);
        modal.find('.modal-body #person_assigned').val(person_assigned);
        modal.find('.modal-body #purchase_price').val(purchase_price);
        modal.find('.modal-body #purchased_from').val(purchased_from);
        modal.find('.modal-body #rounds').val(rounds);
        modal.find('.modal-body #serial_number').val(serial_number);
        modal.find('.modal-body #status').val(status);
        modal.find('.modal-body #type').val(type);
       
    });
});
</script>
