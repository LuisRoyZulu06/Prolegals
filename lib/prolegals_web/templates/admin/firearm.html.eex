<main id="js-page-content" role="main" class="page-content">

<!-- ####################################################### FLASH ################## -->
    <div class="row">
        <div class="col-md-12 col-lg-offset-2">
            <div class="form-group">
                <%= if get_flash(@conn, :info) do %>
                    <div class="alert alert-info alert-styled-left">
                    <button type="button" class="close" data-dismiss="alert">&times; <span class="sr-only">Close</span></button>
                    <%= get_flash(@conn, :info) %>
                    </div>
                <% end %>
                <%= if get_flash(@conn, :error) do %>
                    <div class="alert alert-danger alert-styled-left">
                    <button type="button" class="close" data-dismiss="alert">&times; <span class="sr-only">Close</span></button>
                    Opps! <%= get_flash(@conn, :error) %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
    <!-- ################################################################################ -->

<div class="subheader">
        <h1 class="subheader-title">
            Manage  Firearms
                <br>
            <a href="javascript:void(0);" class="btn btn-light hover-effect" data-toggle="modal" data-target="#addUser">
                Add Firearms
            </a>
        </h1>

        <div class="subheader-block" id="loggedIn-user">
            <i class='subheader-icon fal fa-user'></i> <%= "#{String.capitalize(@conn.assigns.user.first_name)}"%> <%= "#{String.capitalize(@conn.assigns.user.last_name)}"%>  | INVENTORY
        </div>    
    </div>

 <div class="row">
        <div class="col-xl-12">
            <div id="panel-1" class="panel">
                <div class="panel-hdr">
                    <h2>
                       Firearms in Inventory 
                    </h2>
                </div>

                <div class="panel-container show">
                    <div class="panel-content">
                        
                        <!-- datatable start -->
                        <table id="dt-basic-example" class="table table-bordered table-hover table-striped w-100">
                            <thead class="p-3 bg-info-300 rounded overflow-hidden position-relative text-white mb-g">
                                <tr>
                                    <th>Brand</th>
                                    <th>Model</th>
                                    <th>Serial Number</th>
                                    <th>Round</th>
                                    <th>Date Purchased</th>
                                    <th>Person Assigned</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <%= for firearm <- @firearms do %>
                            <tbody>
                                <tr>
                                    <td><%= firearm.brand %></td>
                                    <td><%= firearm.model %></td>
                                    <td><%= firearm.serial_number %></td>
                                    <td><%= firearm.rounds %></td>
                                    <td><%= firearm.date_purchased %></td>
                                    <td><%= firearm.person_assigned %></td>
                                    <td><%= firearm.status %></td>
                                    <td>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <i class='subheader-icon fal fa-chevron-down'></i>
                                                </span>
                                                <div class="dropdown-menu">
                                                    <a class="dropdown-item" href="<%= Routes.admin_path(@conn, :view_firearm, id: firearm.id )%>" >View</a>
                                                    <a type="button" class="dropdown-item" data-toggle="modal" 
                                                        data-id="<%= firearm.id%>" 
                                                        data-brand="<%= firearm.brand%>"
                                                        data-bullet_id="<%= firearm.bullet_id%>" 
                                                        data-date_purchased="<%= firearm.date_purchased%>" 
                                                        data-make_year="<%= firearm.make_year%>"
                                                        data-brand="<%= firearm.brand%>" 
                                                        data-rounds="<%= firearm.rounds%>" 
                                                        data-purchased_from="<%= firearm.purchased_from%>" 
                                                        data-purchase_price="<%= firearm.purchase_price%>" 
                                                        data-person_assigned="<%= firearm.person_assigned%>" 
                                                        data-name="<%= firearm.name%>" 
                                                        data-model="<%= firearm.model%>" 
                                                        data-type="<%= firearm.type%>" 
                                                        data-status="<%= firearm.status%>" 
                                                        data-serial_number="<%= firearm.serial_number%>"
                                                        data-target="#editFire" >
                                                        Edit
                                                    </a> 
                                                    <a class="dropdown-item" href="<%= Routes.admin_path(@conn, :delete_firearms_inventory, id: firearm.id)%>">Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>   
                                </tbody>
                                <% end %>                     
                        </table>
                        <!-- datatable end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

