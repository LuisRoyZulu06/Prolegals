<main id="js-page-content" role="main" class="page-content">

<!-- ####################################################### FLASH ################## -->
    <div class="row">
        <div class="col-md-12 col-lg-offset-2">
            <div class="form-group">
                <%= if get_flash(@conn, :info) do %>
                    <div class="alert alert-info alert-styled-left">
                    <button type="button" class="close" data-dismiss="alert">&times; <span class="sr-only">Close</span></button>
                    <%= get_flash(@conn, :info) %>
                    </div>
                <% end %>
                <%= if get_flash(@conn, :error) do %>
                    <div class="alert alert-danger alert-styled-left">
                    <button type="button" class="close" data-dismiss="alert">&times; <span class="sr-only">Close</span></button>
                    Opps! <%= get_flash(@conn, :error) %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
    <!-- ################################################################################ -->

<div class="subheader">
        <h1 class="subheader-title">
           <i class='subheader-icon fal fa-th'></i> Manage  Assets
                <br>
            <small> Add or Edit Assets</small>
            <a href="javascript:void(0);" class="btn btn-light hover-effect" data-toggle="modal" data-target="#addAssets">
                Add Asset
            </a>
        </h1>

        <div class="subheader-block" id="loggedIn-user">
            <i class='subheader-icon fal fa-user'></i> <%= "#{String.capitalize(@conn.assigns.user.first_name)}"%> <%= "#{String.capitalize(@conn.assigns.user.last_name)}"%>  | INVENTORY
        </div>    
    </div>

 <div class="row">
        <div class="col-xl-12">
            <div id="panel-1" class="panel">
                <div class="panel-hdr">
                    <h2> Assets </h2>
                    <small>Availabe Assets </small>
                </div>

                <div class="panel-container show">
                    <div class="panel-content">
                        
                        <!-- datatable start -->
                        <table id="dt-basic-example" class="table table-bordered table-hover table-striped w-100">
                            <thead class="p-3 bg-info-300 rounded overflow-hidden position-relative text-white mb-g">
                                <tr>
                                    <th>Name</th>
                                    <th>Brand</th>
                                    <th>Status</th>
                                    <th>Purchased From</th>
                                    <th>Type</th>
                                    <th>Action</th>
                                </tr>
                                <%= for all_asset <- @all_assets do %>
                                <tbody>
                                    <tr>
                                        <td><%= all_asset.name %></td>
                                        <td><%= all_asset.brand %></td>
                                        <td><%= all_asset.status %></td>
                                        <td><%= all_asset.purchased_from %></td>
                                        <td><%= all_asset.type %></td>
                                        <td class="pull-right">
                                            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#editAssets"
                                            data-id="<%= all_asset.id%>" 
                                            data-name="<%= all_asset.name%>" 
                                            data-brand="<%= all_asset.brand%>" 
                                            data-type="<%= all_asset.type%>" 
                                            data-category_id="<%= all_asset.category_id%>" 
                                            data-status="<%= all_asset.status%>" 
                                            data-serial_number="<%= all_asset.serial_number%>" 
                                            data-purchased_from="<%= all_asset.purchased_from%>" 
                                            data-date_purchased="<%= all_asset.date_purchased%>" 
                                            data-make_year="<%= all_asset.make_year%>" 
                                            data-asset_number="<%= all_asset.asset_number%>"
                                            data-purchase_price="<%= all_asset.purchase_price%>"
                                            >
                                                Edit
                                            </button>
                                             <button type="button" class="btn btn-info" data-toggle="modal" data-target="#assignAssets"
                                            data-id="<%= all_asset.id%>" 
                                            data-name="<%= all_asset.name%>" 
                                            data-brand="<%= all_asset.brand%>" 
                                            data-type="<%= all_asset.type%>" 
                                            data-category_id="<%= all_asset.category_id%>" 
                                            data-status="<%= all_asset.status%>" 
                                            data-serial_number="<%= all_asset.serial_number%>" 
                                            data-purchased_from="<%= all_asset.purchased_from%>" 
                                            data-date_purchased="<%= all_asset.date_purchased%>" 
                                            data-make_year="<%= all_asset.make_year%>" 
                                            data-employee_number="<%= all_asset.employee_number%>" 
                                            data-office_location="<%= all_asset.office_location%>"
                                            data-assaigned="<%= all_asset.assaigned%>"
                                            data-asset_number="<%= all_asset.asset_number%>"
                                            data-purchase_price="<%= all_asset.purchase_price%>"
                                            >
                                                Assign
                                            </button>
                                        </td>
                                    </tr>   
                                </tbody>    
                            <% end %> 
  
                            </thead>           
                        </table>
                        <!-- datatable end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- ADD ASSETS MODEL -->
<div class="modal fade" id="addAssets" tabindex="-1" role="dialog" aria-hidden="true">
