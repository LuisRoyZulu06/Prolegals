                                                                    <div class="input-group-prepend">
                                                                    </div>
                                                                     <input type="text" value="" name="serial_number" id="serial_number" placeholder="Serial  Number" class="form-control" required="required">
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="form-label">Purchase Price</label>
                                                                <div class="input-group">
                                                                    <div class="input-group-prepend">
                                                                    </div>
                                                                    <input type="text" name="purchase_price" value="" id="purchase_price" placeholder="Purchased From" class="form-control" required="required">
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="form-label">Purchased Date</label>
                                                                <div class="input-group">
                                                                    <div class="input-group-prepend">
                                                                    </div>
                                                                    <input type="date" name="date_purchased" value="" id="date_purchased" placeholder="date_purchased" class="form-control" required="required">
                                                                </div>
                                                            </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="p-20">
                                                            <div class="form-group">
                                                                <label class="form-label">Status</label>
                                                                <select class="custom-select form-control" id="status" name="status" required="required">
                                                                    <option selected="">Status</option>
                                                                    <option value="New">New</option>
                                                                    <option value="Old">Old</option>
                                                                </select>
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="form-label">Brand</label>
                                                                <input type="text" name="brand" value="" id="brand" placeholder="Asset Brand" class="form-control" required="required">
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="form-label">Asset Number</label>
                                                                 <input type="text" value="" name="asset_number" id="asset_number" placeholder="Serial  Number" class="form-control" required="required">
                                                                
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="form-label">Supplier</label>
                                                                <select class="custom-select form-control" id="purchased_from" name="purchased_from" required="required">
                                                                    <option selected="">Select Vendor</option>
                                                                    <%= for vendor <- @vendors do %>
                                                                    <option value="<%= vendor.vendor_name %>"><%= vendor.vendor_name %></option>
                                                                    <% end %>
                                                                </select>
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="form-label">Model Year</label>
                                                                <input type="date" name="make_year" value="" id="make_year" placeholder="Make Year" class="form-control" required="required">
                                                               
                                                            </div>
                                                    </div>
                                                </div>
                                                <!-- end col -->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-info">Submit</button>
                    </div>
                </form>
            </div>   
        </div>
    </div>
</div>

